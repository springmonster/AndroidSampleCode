<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_constraintset_cl"
        tools:context=".ConstraintSetActivity">

    <ImageView
            android:id="@+id/activity_constraint_set_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:onClick="toggleMode"
            android:layout_marginLeft="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/activity_constraint_set_title_tv"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintRight_toLeftOf="@id/activity_constraint_set_title_tv"
            app:layout_constraintBottom_toBottomOf="@id/activity_constraint_set_title_tv"
            app:layout_constraintHorizontal_bias="0"
            android:src="@drawable/lake"/>

    <TextView
            android:layout_margin="30dp"
            android:id="@+id/activity_constraint_set_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="This is title HAHA"
            android:textSize="30sp"
            app:layout_constraintLeft_toRightOf="@+id/activity_constraint_set_img"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/activity_constraint_set_content_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="@string/lake_discription"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/activity_constraint_set_img"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"/>
</androidx.constraintlayout.widget.ConstraintLayout>