<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_constraintset_cl"
        tools:context=".ConstraintSetActivity">

    <ImageView
            android:id="@+id/activity_constraint_set_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:onClick="toggleMode"
            android:scaleType="centerCrop"
            android:src="@drawable/lake"
            app:layout_constraintDimensionRatio="h,16:9"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/activity_constraint_set_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is title HAHA"
            android:textSize="30sp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_constraint_set_img"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_constraint_set_img"/>

    <TextView
            android:id="@+id/activity_constraint_set_content_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="@string/lake_discription"
            app:layout_constraintLeft_toLeftOf="@+id/activity_constraint_set_title_tv"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/activity_constraint_set_title_tv"
            app:layout_constraintRight_toRightOf="@+id/activity_constraint_set_img"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>